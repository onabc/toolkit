<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net6.0-windows</TargetFramework>
		<UseWPF>true</UseWPF>
		<ApplicationIcon>Resources\favicon.ico</ApplicationIcon>
	</PropertyGroup>

	<ItemGroup>
		<Compile Remove="Utils\**" />
		<EmbeddedResource Remove="Utils\**" />
		<None Remove="Utils\**" />
		<Page Remove="Utils\**" />
	</ItemGroup>

	<ItemGroup>
		<None Remove="Resources\favicon.ico" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="akavache" Version="7.3.1" />
		<PackageReference Include="CalcBinding" Version="2.5.2" />
		<PackageReference Include="Caliburn.Micro" Version="4.0.173" />
		<PackageReference Include="gong-wpf-dragdrop" Version="2.3.2" />
		<PackageReference Include="PropertyChanged.Fody" Version="3.4.0" />
		<PackageReference Include="ReactiveUI" Version="16.3.10" />
		<PackageReference Include="Refit" Version="6.1.15" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Toolkit.Widget\Toolkit.Widget.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Resource Include="Resources\favicon.ico" />
	</ItemGroup>

	<ItemGroup>
		<None Update="appsettings.secret.json">
		  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
		<None Update="appsettings.json">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Accessors\" />
	  <Folder Include="Converter\" />
	</ItemGroup>

	<ProjectExtensions>
		<VisualStudio>
			<UserProperties appsettings_1json__JsonSchema="" />
		</VisualStudio>
	</ProjectExtensions>
</Project>